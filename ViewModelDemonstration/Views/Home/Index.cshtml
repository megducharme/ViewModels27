@model VMdemo.ViewModels.StoreListViewModel

@{
    ViewData["Title"] = "Starbucks Ordering System";
}

<h1>@ViewData["Title"]</h1>

@foreach(var store in Model.Stores)
{
    <div>
        <h3><a asp-action="About" asp-controller="Home" asp-route-id="@store.Id">@store.Name</a></h3>
        <h5>Store Manager: @store.Manager.Name</h5>
    </div>
}

<h3>Suppliers</h3>
@foreach(var supplier in Model.Suppliers)
{
    <div>
        <h5>@supplier.Name</h5>
    </div>
}